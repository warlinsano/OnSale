@model OnSale.Web.Data.Entities.Order
@{ViewData["Title"] = "Details";}

<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>Detalles de Orden<small> - # @Model.Id</small></h3>
        </div>
        <div class="title_right">
            <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Buscar...">
                    <span class="input-group-btn">
                        <button class="btn btn-secondary" type="button">Buscar !</button>
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12 col-sm-12 ">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Orden<small> </small></h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
<div>

    <div class="row">
    <div class="col-md-4">
        <dl class="dl-horizontal">
            <dt>
                Fecha
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DateLocal)
            </dd>
            <dt>
                Documento
            </dt>
            <dd>
                @Html.DisplayFor(model => model.User.Document)
            </dd>
            <dt>
                Usuario
            </dt>
            <dd>
                @Html.DisplayFor(model => model.User.FullName)
            </dd>
            <dt>
                Número de teléfono
            </dt>
            <dd>
                @Html.DisplayFor(model => model.User.PhoneNumber)
            </dd>
            <dt>
                Ciudad
            </dt>
            <dd>
                @Html.DisplayFor(model => model.User.City.Name)
            </dd>
            <dt>
                 Correo electrónico
            </dt>
            <dd>
                @Html.DisplayFor(model => model.User.Email)
            </dd>
            <dt>
                Estado del pedido
            </dt>
            <dd>
                @Html.DisplayFor(model => model.OrderStatus)
            </dd>
        </dl>
    </div>
    <div class="col-md-6">
        <dl class="dl-horizontal">
            <dt>
                Fecha de envío
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DateSentLocal)
            </dd>
            <dt>
                Fecha Confirmada
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DateConfirmedLocal)
            </dd>
            <dt>
                Método de pago
            </dt>
            <dd>
                @Html.DisplayFor(model => model.PaymentMethod)
            </dd>
            <dt>
                Líneas
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Lines)
            </dd>
            <dt>
                Cantidad
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Quantity)
            </dd>
            <dt>
                Valor
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Value)
            </dd>
            <dt>
                Observaciones
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Remarks)
            </dd>
        </dl>
    </div>
</div>

</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-success">Volver</a>
</div>
<br />

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
            <h3 class="panel-title">Productos en Orden</h3>
            </div>
            <div class="panel-body">
                <table id="" class="table table-striped jambo_table bulk_action Dtable" style="width:100%">
                      <thead>
                        <tr>
                             <th>
                            Nombre
                            </th>
                             <th>
                            Imagen
                            </th>
                             <th>
                            Categoria
                            </th>
                            <th>
                            Observasion/Comentario                                               
                            </th>
                            <th>
                            Precio
                            </th>
                             <th>
                            Cantidad                                               
                            </th>
                            <th>
                            Valor
                            </th>
                        </tr>
                    </thead>
                    <tbody>

                                            @foreach (var item in Model.OrderDetails)
                                            {
                                                <tr style="background-color: silver;">
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Product.Name)
                                                    </td>
                                                    <td>
                                                        <img src="@item.Product.ImageFullPath" style="width:200px;height:200px;max-width: 100%; height: auto;" />
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Product.Category.Name)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Remarks)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Price)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Quantity)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Value)
                                                    </td>
                                                </tr>
                                            }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
                </div>
            </div>
        </div>

    </div>
</div>

