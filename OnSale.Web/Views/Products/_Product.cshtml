@model OnSale.Web.Models.ProductViewModel


<div class="item form-group">
    <label class="col-form-label col-md-3 col-sm-3 label-align" for="first-name">Nombre:<span class="required">*</span></label>
    <div class="col-md-6 col-sm-6 ">
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
</div>
<div class="item form-group">
    <label class="col-form-label col-md-3 col-sm-3 label-align" for="first-name">Descripcion:<span class="required">*</span></label>
    <div class="col-md-6 col-sm-6 ">
        <textarea asp-for="Description" class="form-control"></textarea> 
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
</div>
<div class="item form-group">
    <label class="col-form-label col-md-3 col-sm-3 label-align" for="first-name">Categoria:<span class="required">*</span></label>
    <div class="col-md-6 col-sm-6 ">
        <select asp-for="CategoryId" asp-items="Model.Categories" class="form-control"></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
</div>

<div class="item form-group">
    <label class="col-form-label col-md-3 col-sm-3 label-align" for="first-name">Precio:<span class="required">*</span></label>
    <div class="col-md-6 col-sm-6 ">
        <input asp-for="PriceString" class="form-control" />
        <span asp-validation-for="PriceString" class="text-danger"></span>
    </div>
</div>
<div class="item form-group">
    <label class="col-form-label col-md-3 col-sm-3 label-align" for="first-name">Imagen:<span class="required">*</span></label>
    <div class="col-md-6 col-sm-6 ">
        <input asp-for="ImageFile" class="form-control" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>
</div>
    <div class="item form-group">
      <label class="col-form-label col-md-3 col-sm-3 label-align" for="first-name"></label>
    <div class="checkbox ">
        <label >
            <input asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
        </label>
    </div>
</div>
<div class="form-group">
    <label class="col-form-label col-md-3 col-sm-3 label-align" for="first-name"></label>
    <div class="checkbox">
        <label>
            <input asp-for="IsStarred" /> @Html.DisplayNameFor(model => model.IsStarred)
        </label>
    </div>
</div>




